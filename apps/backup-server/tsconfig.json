{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "declaration": true,
    "composite": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@shared/utilities": [
        "../../shared/utilities"
      ],
      "@shared/viem": [
        "../../shared/utilities/viem"
      ],
      "@shared/constants": [
        "../../shared/constants"
      ],
      "@shared/types": [
        "../../shared/types"
      ]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}