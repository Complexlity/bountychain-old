{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es2022",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs":  true, 
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "strict": true,
      "noImplicitOverride": true,

    "paths": {
            "@shared/utilities": [
                "..//utilities"
            ],
            "@shared/viem": [
                "../utilities/viem"
            ],
            "@shared/constants": [
                "../constants"
            ],
            "@shared/types": [
                "../types"
            ],
           
    },
},
"exclude": ["node_modules"]
}
  

    